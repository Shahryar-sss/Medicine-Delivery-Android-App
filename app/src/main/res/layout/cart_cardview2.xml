<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="100dp"
    android:layout_margin="10dp"
    android:backgroundTint="#FFEEE4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">



        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:minHeight="100dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cart_cardview_med_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lisinopril"
                android:textStyle="bold"
                android:textSize="24dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/cart_cardview_shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apollo Pharmacy"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:id="@+id/cart_cardview_med_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity : 2"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="end">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs"
                    android:textColor="#9677FC"
                    android:layout_marginTop="10dp"
                    android:textSize="22dp"/>

                <TextView
                    android:id="@+id/cart_cardview_price_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="60"
                    android:layout_marginLeft="5dp"
                    android:textColor="#9677FC"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:textSize="22dp"/>

            </LinearLayout>

            <Button
                android:id="@+id/cart_cardview_remove_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="end"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/remove_icon" />

        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>